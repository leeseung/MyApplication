<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="calc2"
    android:orientation="vertical"
   >

<TableRow>
    <EditText
        android:id="@+id/edit1"
        android:layout_span="5"
        android:hint="숫자1"/>
</TableRow>
    <TableRow>
    <EditText
        android:id="@+id/edit2"
        android:layout_span="5"
        android:hint="숫자2"/>
    </TableRow>

    <TableRow>
    <Button
        android:id="@+id/btnN0"
        android:text="0"
        android:layout_width="75dp"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btnN1"

        android:layout_width="75dp"
        android:text="1"/>
    <Button
        android:id="@+id/btnN2"

        android:layout_width="75dp"
        android:text="2"/>
    <Button
        android:id="@+id/btnN3"

        android:layout_width="75dp"
        android:text="3"/>
    <Button
        android:id="@+id/btnN4"

        android:layout_width="75dp"
        android:text="4"/>
    </TableRow>

    <TableRow>
    <Button
        android:id="@+id/btnN5"

        android:text="5"
        android:layout_width="75dp"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btnN6"

        android:layout_width="75dp"
        android:text="6"/>
    <Button
        android:id="@+id/btnN7"

        android:layout_width="75dp"
        android:text="7"/>
    <Button
        android:id="@+id/btnN8"

        android:layout_width="75dp"
        android:text="8"/>
    <Button
        android:id="@+id/btnN9"
        android:layout_width="75dp"
        android:text="9"/>

    </TableRow>


    <TableRow>
    <Button
        android:id="@+id/add"
        android:layout_margin="5dp"
        android:layout_span="5"
        android:text="더하기"/>
    </TableRow>

    <TableRow>
    <Button
        android:id="@+id/sub"
        android:layout_margin="5dp"
        android:layout_span="5"
        android:text="빼기"/>
    </TableRow>

    <TableRow>
    <Button
        android:id="@+id/mul"
        android:layout_margin="5dp"
        android:layout_span="5"
        android:text="곱하기"/>
    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/div"
            android:layout_margin="5dp"
            android:layout_span="5"
            android:text="나누기"/>
    </TableRow>

    <TableRow>
    <TextView
        android:id="@+id/text1"
        android:layout_margin="5dp"
        android:layout_span="5"
        android:textSize="15dp"
        android:text="계산 결과 : "
        android:textColor="#e21010"/>
    </TableRow>

</TableLayout>